@model Equipe

@{
    ViewData["Title"] = "Gerenciamento-de-equipe";
}
<link rel="stylesheet" href="~/Images" />
 <div class="titulo_pagina">
            <h1>cadastro de jogador</h1>
        </div>


<form class="cadastro" method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
   
    <div class="campo">
        <label for="IdJogador">Id do Jogador</label>
        <input type="text" name="IdJogador" />
    </div>

    <div class="campo">
        <label for="Email">Email</label>
        <input type="email"name="Email" />
    </div>

    <div class="campo">
        <label for="Senha">Senha</label>
        <input type="password" />
    </div>

    <div class="campo">
        <label for="Nome">Seu Nome</label>
        <input type="text" name="Nome" />
    </div>

    <div class="campo">
        <label for="IdEquipe">Id da Equipe</label>
        <Input type="text" name="IdEquipe" />
    </div>

    <div class="campo">
        <label for="NomeDaEquipe">Nome da equipe</label>
        <input type="text" name="NomeDaEquipe" />
    </div>

    <div class="campo">
        <label for="Imagem">Logo da equipe</label>
        <input type="file" name="Imagem" />
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>

</form>

    <table class="table table-striped table-responsive">
        <thead>
            <th>ID</th>
            <th>NOME</th>
            <th>IMAGEM</th>
        </thead>

        <tbody>
            @foreach (Equipe x in ViewBag.Equipes)
            {
                <tr>
                    <td>@x.IdEquipe</td>
                    <td>@x.NomeDaEquipe</td>
                    <td><img src="/img/Equipes/@x.Imagem" alt="Imagem da equipe @x.NomeDaEquipe" width="50"></td>
                    <td><a asp-area="Deletar a equipe" asp-controller="Equipe" asp-action="delet" asp-route-id="@x.IdEquipe"><img src="lixo.png" alt="excluir"></a></td>
                </tr>
            }
        </tbody>

    </table>